<%# TOPページ %>
<div class="min-h-screen bg-emerald-50 flex flex-col">

  <section class="flex items-center justify-center text-center px-6 py-24">
    <div class="max-w-3xl mx-auto">

      <!-- メインタイトル -->
      <div class="mb-8">
        <h1 class="text-5xl md:text-6xl font-bold text-emerald-700 mb-4">
          MatchaTasty
        </h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
          抹茶スイーツに特化したレビュー・発見サービス。<br>
          あなたのお気に入りを見つけて、シェアしましょう。
        </p>
      </div>


      <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
        <%= link_to new_user_registration_path, class: "bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-4 rounded-full text-lg font-semibold shadow-md transition-transform hover:scale-105" do %>
          今すぐ始める
        <% end %>

        <%= link_to new_user_session_path, class: "border border-emerald-600 text-emerald-600 hover:bg-emerald-100 px-8 py-4 rounded-full text-lg font-semibold transition-colors" do %>
          ログイン
        <% end %>
      </div>
  </section>

  <!-- 3ステップ紹介 -->
  <section class="py-1 bg-emerald-50">
    <div class="max-w-5xl mx-auto px-6">
      <h2 class="text-3xl font-bold text-center text-emerald-700 mb-12">
        たった3ステップ
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Step 1 -->
        <div class="text-center bg-white rounded-2xl p-8 shadow-sm hover:shadow-md transition-transform hover:-translate-y-2">
          <div class="text-5xl mb-4">👤</div>
          <div class="w-8 h-8 bg-emerald-500 text-white rounded-full flex items-center justify-center text-sm font-bold mx-auto mb-3">1</div>
          <h3 class="text-xl font-semibold text-emerald-600 mb-2">登録</h3>
          <p class="text-gray-600">1分で完了！プロフィールを作って仲間とつながろう</p>
        </div>

        <!-- Step 2 -->
        <div class="text-center bg-white rounded-2xl p-8 shadow-sm hover:shadow-md transition-transform hover:-translate-y-2">
          <div class="text-5xl mb-4">📸</div>
          <div class="w-8 h-8 bg-emerald-500 text-white rounded-full flex items-center justify-center text-sm font-bold mx-auto mb-3">2</div>
          <h3 class="text-xl font-semibold text-emerald-600 mb-2">投稿</h3>
          <p class="text-gray-600">お気に入りの抹茶スイーツを写真と一緒にシェア</p>
        </div>

        <!-- Step 3 -->
        <div class="text-center bg-white rounded-2xl p-8 shadow-sm hover:shadow-md transition-transform hover:-translate-y-2">
          <div class="text-5xl mb-4">🔍</div>
          <div class="w-8 h-8 bg-emerald-500 text-white rounded-full flex items-center justify-center text-sm font-bold mx-auto mb-3">3</div>
          <h3 class="text-xl font-semibold text-emerald-600 mb-2">発見</h3>
          <p class="text-gray-600">みんなのレビューから新しい抹茶スイーツを見つけよう</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-24 text-center bg-emerald-50">
    <div class="max-w-3xl mx-auto px-6">
      <h2 class="text-3xl font-bold text-emerald-700 mb-6">
        抹茶好きのあなたへ
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        あなたの抹茶体験を、みんなとシェアしませんか？
      </p>
      <%= link_to products_path, class: "inline-flex items-center bg-emerald-600 hover:bg-emerald-700 text-white px-10 py-4 rounded-full text-xl font-bold shadow-md hover:shadow-lg transition-transform hover:scale-105" do %>
        参加する
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      <% end %>
    </div>
  </section>
</div>

<!-- ページ全体のトランジション効果 -->
<style>
  * {
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>
