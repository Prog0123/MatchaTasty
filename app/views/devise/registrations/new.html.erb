<%# 新規登録画面 %>
<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-center mb-6">
    <%= t('devise.registrations.new.sign_up') %>
  </h2>

  <!-- Googleログイン -->
  <div class="mb-6">
    <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-outline w-full", data: { turbo: false } do %>
      <i class="fab fa-google mr-2"></i>
      <%= t('devise.registrations.new.google_sign_up', default: 'Googleで登録') %>
    <% end %>
  </div>

  <div class="divider">または</div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- ユーザー名 -->
    <div class="form-control mb-4">
      <%= f.label :name, t('activerecord.attributes.user.name'), class: "label label-text font-semibold" %>
      <%= f.text_field :name, autocomplete: "name", class: "input input-bordered w-full" %>
    </div>

    <!-- メール -->
    <div class="form-control mb-4">
      <%= f.label :email, t('activerecord.attributes.user.email'), class: "label label-text font-semibold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>

    <!-- パスワード -->
    <div class="form-control mb-4">
      <%= f.label :password, t('activerecord.attributes.user.password'), class: "label label-text font-semibold" %>
      <% if @minimum_password_length %>
        <div class="text-sm text-gray-500 mb-1">
          <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
        </div>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>

    <!-- パスワード確認 -->
    <div class="form-control mb-6">
      <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation'), class: "label label-text font-semibold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>

    <!-- 登録ボタン -->
    <div class="form-control">
      <%= f.submit t('devise.registrations.new.sign_up'), class: "btn btn-primary w-full" %>
    </div>
  <% end %>
  
  <!-- ログインリンク -->
  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>