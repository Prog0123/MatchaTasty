<!-- ログイン画面 -->
<div class="max-w-md mx-auto mt-10">
  <div class="card bg-white p-8 shadow-xl">
    <h2 class="text-2xl font-bold mb-6 text-center">
      <%= t('devise.sessions.new.sign_in') %>
    </h2>

    <!-- Googleログイン -->
    <div class="mb-6">
      <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-outline w-full", data: { turbo: false } do %>
        <i class="fab fa-google mr-2"></i>
        <%= t('devise.sessions.new.google_sign_in', default: 'Googleでログイン') %>
      <% end %>
    </div>

    <div class="divider">または</div>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "space-y-4", local: true do |f| %>
      <!-- メールアドレス -->
      <div class="form-control">
        <%= f.label :email, t('activerecord.attributes.user.email'), class: "label label-text font-semibold" %>
        <%= f.email_field :email, autofocus: true, class: "input input-bordered w-full" %>
      </div>
      
      <!-- パスワード -->
      <div class="form-control">
        <%= f.label :password, t('activerecord.attributes.user.password'), class: "label label-text font-semibold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-control">
          <label class="cursor-pointer label">
            <%= f.check_box :remember_me, class: "checkbox" %>
            <span class="label-text ml-2"><%= t('devise.sessions.new.remember_me') %></span>
          </label>
        </div>
      <% end %>

      <%= f.submit t('devise.sessions.new.sign_in'), class: "btn btn-primary w-full" %>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>