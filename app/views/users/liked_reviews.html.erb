<%= render 'mypage_header' %>

<div class="container mx-auto p-4">
  <% if @reviews.empty? %>
    <div class="alert alert-info">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <span>„Åæ„Å†„ÅÑ„ÅÑ„Å≠„Åó„ÅüÊäïÁ®ø„Åå„ÅÇ„Çä„Åæ„Åõ„Çì„ÄÇ</span>
    </div>
  <% else %>
    <!-- „ÅÑ„ÅÑ„Å≠‰∏ÄË¶ß„Ç∞„É™„ÉÉ„Éâ -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-4 gap-4">
      <% @reviews.each do |review| %>
        <% product = review.product %>
        <div class="card bg-white shadow-sm hover:shadow-md transition-shadow">
          
          <!-- ÊäïÁ®øËÄÖÊÉÖÂ†± -->
          <div class="flex items-center px-3 py-2 space-x-2 border-b">
            <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center">
              <% if review.user.avatar.attached? %>
                <%= image_tag review.user.avatar, class: "w-full h-full rounded-full object-cover" %>
              <% elsif review.user.image_url.present? %>
                <%= image_tag review.user.image_url, class: "w-full h-full rounded-full object-cover" %>
              <% else %>
                <svg class="w-3 h-3 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
              <% end %>
            </div>
            <span class="text-xs text-gray-600 truncate">
              <%= review.user.name %>
            </span>
          </div>

          <figure class="h-40 overflow-hidden">
            <%= link_to product_path(product) do %>
              <% if product.image.attached? %>
                <%= image_tag product.image, class: "w-full object-contain h-full bg-gray-50 hover:opacity-90 transition-opacity" %>
              <% else %>
                <div class="flex items-center justify-center w-full h-full text-gray-400 bg-gray-50">ÁîªÂÉè„Å™„Åó</div>
              <% end %>
            <% end %>
          </figure>

          <div class="card-body p-4">
            <h2 class="text-sm font-semibold leading-tight mb-2">
              <%= link_to product.name, product_path(product), class: "link link-hover line-clamp-2" %>
            </h2>

            <!-- Ë©ï‰æ°Ë°®Á§∫ -->
            <div class="space-y-1 mb-3">
              <div class="flex items-center space-x-1">
                <% review.richness.to_i.times do %>
                  <span class="text-green-600 text-xs">üçµ</span>
                <% end %>
                <span class="text-xs font-bold"><%= review.richness.to_i %>/5</span>
              </div>
              <div class="text-xs text-gray-500">
                Âπ≥Âùá„Çπ„Ç≥„Ç¢: <%= review.score.round(1) %>
              </div>
            </div>

            <!-- ÊäïÁ®øÊó•„Å®„ÅÑ„ÅÑ„Å≠„Éª„Ç≥„É°„É≥„ÉàÊï∞ -->
            <div class="flex items-center justify-between text-xs text-gray-400">
              <span><%= review.created_at.strftime("%Y/%m/%d") %></span>
              <div class="flex items-center space-x-2">
                <span>‚ù§Ô∏è <%= review.likes_count %></span>
                <span>üí¨ <%= review.comments.count %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- „Éö„Éº„Ç∏„Éç„Éº„Ç∑„Éß„É≥ -->
    <div class="mt-8 flex justify-center">
      <%= paginate @reviews,
          first_label: '&laquo;'.html_safe,
          last_label: '&raquo;'.html_safe,
          previous_label: '&lsaquo;'.html_safe,
          next_label: '&rsaquo;'.html_safe,
          outer_window: 2,
          inner_window: 2 %>
    </div>
  <% end %>
</div>