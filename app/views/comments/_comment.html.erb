<div id="comment-<%= comment.id %>" class="bg-gray-50 p-4 rounded-lg border border-gray-200">
  <!-- コメント投稿者とメタ情報 -->
  <div class="flex items-center justify-between mb-3">
    <div class="flex items-center space-x-2">
      <div class="w-6 h-6 bg-gray-300 rounded-full flex items-center justify-center">
        <svg class="w-3 h-3 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div>
        <p class="text-sm font-semibold text-gray-700"><%= comment.user&.name || "匿名" %></p>
        <p class="text-xs text-gray-500">
          <%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %>
        </p>
      </div>
    </div>

    <!-- 削除ボタン（投稿者のみ） -->
    <% if user_signed_in? && comment.user == current_user %>
      <%= button_to review_comment_path(@review, comment),
          method: :delete,
          class: "btn btn-xs btn-ghost text-red-500 hover:bg-red-100",
          data: { turbo: true } do %>
        削除
      <% end %>
    <% end %>
  </div>

  <!-- コメント本文 -->
  <p class="text-sm text-gray-700 leading-relaxed">
    <%= simple_format(h(comment.text)) %>
  </p>
</div>